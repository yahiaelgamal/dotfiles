[user]
  name = yahiaelgamal
  email = yahiaelgamal@gmail.com

[core]
  editor = vim
  excludesfile = ~/.gitignore_global
  quotepath = false
  ignorecase = false
  autocrlf = input

[color]
  diff = true
  branch = true

[push]
  default = current

[difftool "git_diff_wrapper"]
  cmd = git_diff_wrapper $LOCAL $REMOTE

[mergetool]
  tool = vimdiff

[alias]
  co = checkout
  b = branch
  s = status
  d = diff
  dc = diff --cached
  ri = rebase --interactive
  ss = status -uno
  l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%C(yellow)\\ [%cn]%Creset" --decorate --date=short
  bb = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"
  dw = diff --color-words='\\w+|[^[:space:]]'
  dcw = diff --cached --color-words='\\w+|[^[:space:]]'

[credential]
  helper = osxkeychain

[diff]
  wsErrorHighlight = all

# Environment-specific overrides: place a .gitconfig.local on each machine
# e.g. for work: override [user] email, add signing keys, etc.
[include]
  path = ~/.gitconfig.local
